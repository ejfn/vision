{
  "extends": [
    "tslint:latest",
    "tslint-microsoft-contrib/recommended_ruleset"
  ],
  "rulesDirectory": [
    "tslint-microsoft-contrib"
  ],
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "max-classes-per-file": false,
    "interface-name": false,
    "missing-jsdoc": false,
    "no-unused-variable": false,
    "no-default-export": false,
    "no-relative-imports": false,
    "no-empty-interfaces": false,
    "no-http-string": false,
    "no-unsafe-any": false, // this sounds good in principle but is very anoying to work with
    "import-name": false, // This generate unexpected results when importing node modules which typicly have lowercase names
    "export-name": false, // This would be good, except it makes multiple exports from the same file messy and irritating
    "match-default-export-name": {
      "severity": "warning"
    },
    "trailing-comma": true,
    "react-tsx-curly-spacing": [
      true,
      "never",
      {
        "allowMultiline": true
      }
    ],
    "array-type": [
      true,
      "generic"
    ],
    "prefer-array-literal": [
      true,
      {
        "allow-type-parameters": true
      }
    ],
    "prefer-for-of": false,
    "no-increment-decrement": false,
    "no-backbone-get-set-outside-model": false,
    "prefer-type-cast": false,
    "no-angle-bracket-type-assertion": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "member-ordering": false,
    "strict-boolean-expressions": false,
    "completed-docs": false,
    "mocha-no-side-effect-code": false,
    "no-import-side-effect": [
      true,
      {
        "ignore-module": "(\\.scss|\\.css|core-js/.*|isomorphic-fetch)$"
      }
    ],
    "no-submodule-imports": [
      true,
      "src",
      "assets",
      "react-transition-group",
      "redux-saga/effects",
      "redux-saga/utils",
      "uuid/v5",
      "ajv/lib/refs/json-schema-draft-04.json",
      "ajv/lib/refs/json-schema-draft-06.json",
      "core-js",
      "bootstrap",
      "font-awesome",
      "react-grid-layout/css/styles.css",
      "react-resizable/css/styles.css"
    ],
    "function-name": [
      true,
      {
        "method-regex": "^[a-z][\\w\\d]+$",
        "private-method-regex": "^[a-z][\\w\\d]+$",
        "protected-method-regex": "^[a-z][\\w\\d]+$",
        "static-method-regex": "^([A-Z][\\w\\d]+)|getDerivedStateFromProps$",
        "function-regex": "^[a-z][\\w\\d]+$"
      }
    ],
    "no-console": [
      true,
      "memory",
      "assert",
      "clear",
      "count",
      "debug",
      "dir",
      "dirxml",
      "exception",
      "group",
      "groupCollapsed",
      "groupEnd",
      "info",
      "log",
      "markTimeline",
      "msIsIndependentlyComposed",
      "profile",
      "profileEnd",
      "select",
      "table",
      "time",
      "timeEnd",
      "timeStamp",
      "timeline",
      "timelineEnd",
      "trace"
    ],
    "no-redundant-jsdoc": false,
    "no-multiline-string": false, // Disabled becuase of styled-components
    "no-implicit-dependencies": false, // This would be quite ueseful, but currently breaks with our absolute imports
    // This should be enabled for beta and release builds
    "no-suspicious-comment": false,
    // This rule is currently broken https://github.com/Microsoft/tslint-microsoft-contrib/issues/339
    "react-unused-props-and-state": false
  },
  "jsRules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "max-classes-per-file": false,
    "no-unused-variable": false
  }
}
