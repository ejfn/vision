{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Config",
  "description": "extra section in app.json",
  "definitions": {
    "AzureLocation": {
      "type": "string",
      "enum": [
        "westus",
        "australiaeast",
        "southeastasia",
        "northeurope"
      ]
    },
    "ApiLocationKey": {
      "type": "object",
      "properties": {
        "location": {
          "$ref": "#/definitions/AzureLocation"
        },
        "key": {
          "type": "string"
        }
      },
      "required": [
        "location",
        "key"
      ],
      "additionalProperties": false
    },
    "GeoLocationMap": {
      "type": "object",
      "properties": {
        "AF": {
          "$ref": "#/definitions/AzureLocation"
        },
        "AN": {
          "$ref": "#/definitions/AzureLocation"
        },
        "AS": {
          "$ref": "#/definitions/AzureLocation"
        },
        "EU": {
          "$ref": "#/definitions/AzureLocation"
        },
        "NA": {
          "$ref": "#/definitions/AzureLocation"
        },
        "OC": {
          "$ref": "#/definitions/AzureLocation"
        },
        "SA": {
          "$ref": "#/definitions/AzureLocation"
        }
      },
      "additionalProperties": false
    },
    "AdMobSettings": {
      "type": "object",
      "properties": {
        "banners": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AdUnitIds"
          }
        },
        "interstitials": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AdUnitIds"
          }
        },
        "testDeviceIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "banners",
        "interstitials",
        "testDeviceIds"
      ],
      "additionalProperties": false
    },
    "AdUnitIds": {
      "type": "object",
      "properties": {
        "ios": {
          "type": "string"
        },
        "android": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "AmplitudeSettings": {
      "type": "object",
      "properties": {
        "apiKey": {
          "type": "string"
        }
      },
      "required": [
        "apiKey"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "semver": {
      "description": "Semantic Version",
      "type": "string",
      "default": "1.0.0"
    },
    "showHintIdleSeconds": {
      "description": "Show Hint when idle for x seconds ",
      "type": "number",
      "default": 5
    },
    "showInterstitialCalls": {
      "description": "Show interstitial ad every x calls",
      "type": "number",
      "default": 10
    },
    "limitedAccessCalls": {
      "description": "Maximium calls when failed to load ad",
      "type": "number",
      "default": 3
    },
    "geoAzureLocationMap": {
      "description": "Geo and azure location mapping",
      "$ref": "#/definitions/GeoLocationMap"
    },
    "faceApiKeys": {
      "description": "Face api endpoints and keys",
      "type": "array",
      "items": {
        "$ref": "#/definitions/ApiLocationKey"
      },
      "minItems": 1
    },
    "emotionApiKeys": {
      "description": "Emotion api endpoints and keys",
      "type": "array",
      "items": {
        "$ref": "#/definitions/ApiLocationKey"
      },
      "minItems": 1
    },
    "visionApiKeys": {
      "description": "Vision api endpoints and keys",
      "type": "array",
      "items": {
        "$ref": "#/definitions/ApiLocationKey"
      },
      "minItems": 1
    },
    "adMob": {
      "description": "AdMob Settings",
      "$ref": "#/definitions/AdMobSettings"
    },
    "amplitude": {
      "description": "Amplitude Settings",
      "$ref": "#/definitions/AmplitudeSettings"
    }
  },
  "required": [
    "semver",
    "showHintIdleSeconds",
    "showInterstitialCalls",
    "limitedAccessCalls",
    "geoAzureLocationMap",
    "faceApiKeys",
    "emotionApiKeys",
    "visionApiKeys",
    "adMob",
    "amplitude"
  ],
  "additionalProperties": false
}
