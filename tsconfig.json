{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "jsx": "react-native",
    "outDir": "artifacts",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "decls/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
